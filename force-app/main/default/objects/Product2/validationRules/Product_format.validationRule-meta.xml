<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Product_format</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( ProductCode , &quot;PROD-\\d{4}&quot;))</errorConditionFormula>
    <errorDisplayField>ProductCode</errorDisplayField>
    <errorMessage>Product Number in Incorrect Format</errorMessage>
</ValidationRule>
